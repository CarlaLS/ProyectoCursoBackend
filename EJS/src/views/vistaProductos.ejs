<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/icon/nodejs.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"/>
    
    <link href="/css/estilos.css" rel="stylesheet" />
    <title>EJS</title>
  </head>
  <body>
    <div class="main">
      <div class="column">
        <h1>EJS</h1>

        <a href="/">
          <button type="button" style="background-color: #ff6962">Volver al inicio</button>
        </a>

        <h2 class="mb-4">Vista de Productos</h2>

        <% if(todosProductos.length > 0){ %>
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col" class="ps-4">Nombre</th>
              <th scope="col" class="text-center">Precio</th>
              <th scope="col" class="text-center">Imagen</th>
            </tr>
          </thead>
          <tbody>
            <% for (const productos of todosProductos) {%>
            <tr>
              <th scope="row" class="ps-4 align-middle"><%=productos.title%></th>
              <td class="text-center align-middle"><%=productos.price%></td>
              <td>
                <div class="image-container text-center">
                  <img src="<%= productos.thumbnail %>" alt="Product image" class="img-thumbnail" />
                </div>
              </td>
            </tr>
            <%}%>
          </tbody>
        </table>
        <% } else { %>
        <div class="message">
          <h2>No hay productos</h2>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
